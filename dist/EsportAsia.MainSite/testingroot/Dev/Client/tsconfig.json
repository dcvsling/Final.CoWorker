{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es6", "dom"],
        "mapRoot": "./",
        "module": "es6",
        "moduleResolution": "node",
        "outDir": "../dist/out-tsc",
        "sourceMap": true,
        "files": ["main.ts"],
        "target": "es5",
        "paths": {
            "@_bootstrap/*": ["app/bootstrap/*"],
            "@_routing/*": ["app/routing/*"],
            "@_models/*": ["app/models/*"],
            "@_children_models/*": ["app/children_models/*"]
        },
        "typeRoots": [
            "../../node_modules/@types"
        ],
        "types": []

    },

    "exclude": ["**/_*.ts", "**/*.spec.ts", "./app/models/data/interface/*", "**/aot/*", "**/_*/*"]
}